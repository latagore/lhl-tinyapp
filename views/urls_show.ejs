<%- include partials/_header %>
<article>
  <form method="POST" action="/urls/<%= shortURL %>?_method=PUT">
    <h2>Edit Short URL</h2>
    
    <label>Short URL: </label>
    <h3><a href="/u/<%= shortURL %>"><%= shortURL %></a></h3>
    
     <label for="url">Long URL: 
      <input type="text" name="url" value="<%= longURL %>"required="required" />
    </label>
    
    <button class="button" type="submit">Update</button>
    
  </form>
  <div>Visits: <%= visits.length %>, unique visits: <%= uniqueVisits %></div>
  <div class="log">
  <h5>Visit History (ip, time)</h5>
    <ol>
      <% visits.forEach((v) => { %>
        <li><%= v.id %>, <%= v.time %></li>
      <% }) %>
    </ol>
  </div>
</article>
<%- include partials/_footer %>